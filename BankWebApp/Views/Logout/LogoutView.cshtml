@{
    ViewData["Title"] = "Logged Out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="card-title text-success mb-3">Successfully Logged Out</h3>
                    <p class="card-text text-muted mb-4">
                        You have been safely logged out of your account. Thank you for banking with us!
                    </p>
                    <div class="d-grid">
                        <button type="button" class="btn btn-primary btn-lg" onclick="loadView()">
                            <i class="fas fa-sign-in-alt me-2"></i>Login Again
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>