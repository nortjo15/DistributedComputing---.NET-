@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <div id="LoginForm">
                        <div class="mb-3">
                            <input type="text" id="SName" name="SUname" class="form-control" placeholder="User Name" />
                        </div>
                        <div class="mb-3">
                            <input type="password" id="SPass" name="SPassword" class="form-control" placeholder="Password" />
                        </div>
                        <div class="d-grid">
                            <button type="button" id="SubmitButton" class="btn btn-primary" onclick="performAuth()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
